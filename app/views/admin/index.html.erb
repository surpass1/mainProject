<% @page_title = "Users|List" %>
<h2>Listing Admin</h2>

<table class="table table-striped" style="font-size:14px;">
  <tr>
    <th>FIRSTNAME</th>
    <th>LASTNAME</th>
    <th>EMAIL</th>
    <th>ACTION</th>
  </tr>

<% @admin.each do |admin| %>
  <tr>
    <td><%= admin.first_name %></td>
    <td><%= admin.last_name %></td>
    <td><%= admin.email %></td>
    <td>
      <%= link_to 'Show', {:action=>'show', :id=>admin.id}, :class=>"btn-link" %> | 
      <%= link_to 'Edit', {:action=>'edit'} , :class=>"btn-link" %> | 
      <%= link_to 'Destroy', admin, confirm: 'Are you sure?', method: :delete , :class=>"btn-link" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', {:action=>'new'} , :class=>"btn btn-medium btn-info"%>
