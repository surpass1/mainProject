<h1>Listing notes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subject</th>
    <th>Academic class</th>
    <th>App file name</th>
    <th>App file size</th>
    <th>App content type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.title %></td>
    <td><%= note.subject %></td>
    <td><%= note.academic_class %></td>
    <td><%= note.app_file_name %></td>
    <td><%= note.app_file_size %></td>
    <td><%= note.app_content_type %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

