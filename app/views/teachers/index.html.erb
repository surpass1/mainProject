<h3>Listing teachers</h3>

<table class="table table-striped" style="font-size:14px;">
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Subject</th>
    <th>Action</th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.firstname %></td>
    <td><%= teacher.lastname %></td>
    <td><%= teacher.subject %></td>
    <td>
        <%= link_to 'Show', teacher , :class=>"btn-link" %> |
        <%= link_to 'Edit', edit_teacher_path(teacher), :class=>"btn-link"  %> |
        <%= link_to 'Destroy', teacher, confirm: 'Are you sure?', method: :delete, :class=>"btn-link"  %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Teacher', new_teacher_path , :class=>"btn btn-medium btn-info"%>
