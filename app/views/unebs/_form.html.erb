
  <% if @uneb.errors.any? %>
    <div  id="error_explanation" style="border:1px solid black;border-color:#CC0000; font-size:14px;text-align:left;">
      <% @uneb.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  <% end %>
  <table>   
    
    <div class="field">
      <tr><td>
      <%= f.label :subject_name %></td><td>
      <%= f.select(:subject, @subjects.collect {|r| [r.subjectname]}, {:include_blank=>"--- select subject ---"}) %>
      </td></tr>
    </div>
    <div class="field">
      <tr><td>
      <%= f.label :academic_level %></td><td>
      <%= f.text_field :academic_level %>
      </td></tr>
    </div>
    <div class="field">
      <tr><td>
      <%= f.label :file %></td><td>
      <%= f.file_field :app %>
      </td></tr>
    </div>
    <div class="field">
      <tr><td>
      <%= f.label :academic_year %></td><td style="width:500px;">
      <%= f.date_select :academic_year %>
    </td></tr>
    </div>
    <div class="actions">
      <tr><td>
      <%= submit_tag "Upload", :class=>"btn btn-medium btn-success" %>
      </td></tr>
    </div>
  
</table>