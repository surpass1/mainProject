<% @page_title = "Users|List" %>
<h3>Listing users</h3>

<table border="1">
  <tr>
    <td>FIRSTNAME</td>
    <td>LASTNAME</td>
    <td>EMAIL</td>
    <td>ACTION</td>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td>
      <%= link_to 'Show', user, :class=>"btn-link" %> | 
      <%= link_to 'Edit', edit_user_path(user) , :class=>"btn-link" %> | 
      <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete , :class=>"btn-link" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path , :class=>"btn btn-medium btn-info"%>
